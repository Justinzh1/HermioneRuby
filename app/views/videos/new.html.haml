- content_for :head do
	= stylesheet_link_tag 'dashboard'

- content_for :body do
	.container
		%h1= "New Video for " + @course.abbrev
		%p Internal tool meant for uploading a file to google drive from a service account
		= form_for :video, :url => courses_semester_videos_path(@semester.id) do |f|
			.form-container
				.upload-form-grid
					.v1
						= label :video, :number, 'Video Number'
						= text_field :video, 'number', class: 'form-control inline-block'
					.v2
						= label :drive, :folder_id, 'Drive Folder ID'
						= text_field :drive, 'folder_id', class: 'form-control inline-block'
					.v3
						= label :video, :title, 'Video Title'
						= text_field :video, 'title', class: 'form-control inline-block'
					.v4
						= label :video, :category_id, 'Category ID'
						= text_field :video, 'category_id', class: 'form-control inline-block'
					.desc
						= label :video, :description, 'Description'
						= text_area :video, 'description', class: 'form-control inline-block'
					.tags
						= label :video, :tags, 'Tags'
						= text_field :video, 'tags', class: 'form-control inline-block'
					.local
						= label :drive, :file_path, 'File Path'
						= text_field :drive, 'file_path', class: 'form-control inline-block'
									
				.col-xs-12.col-md-12.no-left-padding
					%br
					= submit_tag 'Upload', class: 'btn btn-default inline-block'